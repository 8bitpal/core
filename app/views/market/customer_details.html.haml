- title 'Customer Details'

= simple_form_for(@customer) do |f|
  = f.error_notification

  .inputs
    = hidden_field_tag :order_id,  @order.id
    = f.association :distributor, :as => :hidden
    = f.input :email, :as => :hidden
    = f.input :first_name
    = f.input :last_name

  = f.simple_fields_for :address do |g|
    .inputs
      = g.input :address_1
      = g.input :address_2
      = g.input :suburb
      = g.input :city
      = g.input :postcode
      = g.input :delivery_note
      = g.input :phone_1
      = g.input :phone_2
      = g.input :phone_3

  .actions
    = f.button :submit, 'Next'


