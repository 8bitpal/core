= simple_form_for([:distributor, @customer]) do |f|
  = f.error_notification

  .row
    .six.columns
      .inputs
        = f.input :number
        = f.input :email
        = f.input :first_name
        = f.input :last_name
        = f.association :route, collection: current_distributor.routes, include_blank: false
        = f.input :tag_list, label: 'Customer tags', hint: 'Comma separated'
        = f.input :discount, input_html: { step: 0.0001 }
        = f.input :notes

    .six.columns
      = f.simple_fields_for :address do |g|
        .inputs
          = g.input :address_1
          = g.input :address_2
          = g.input :suburb
          = g.input :city
          = g.input :postcode
          = g.input :phone_1
          = g.input :phone_2
          = g.input :phone_3
          = g.input :delivery_note

      .actions
        = f.button :submit
        = link_to 'Cancel', :back, :class => 'blue radius button'
