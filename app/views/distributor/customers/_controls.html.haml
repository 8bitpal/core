- content_for :sub_nav do
  .row.page-controls.customer-controls
    .seven.columns
      - if params[:query]
        %h3== Searching "#{params[:query]}"
      - elsif params[:tag]
        %h3== Tag "#{params[:tag]}"

      - if params[:query] || params[:tag]
        = link_to 'Clear', distributor_customers_path

    .five.columns.text-right.search
      = form_tag search_distributor_customers_path, method: :get, class: 'nice' do
        = submit_tag 'Search', class: 'small radius button float-right'
        = text_field_tag :query, '', placeholder: 'Customer Number, Name, Address', class: 'input-text float-right'
