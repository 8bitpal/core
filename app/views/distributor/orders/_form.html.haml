= simple_form_for([@distributor, @account, @order]) do |f|
  = f.error_notification

  .inputs
    = f.association :box, :collection => box_collection(current_distributor, with_price:true), :include_blank => false
    = f.input :quantity
    = f.input :likes
    = f.input :dislikes

  .actions
    = f.button :submit
