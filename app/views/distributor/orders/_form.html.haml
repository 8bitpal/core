= hidden_field_tag 'distributor_id', @distributor.id

= simple_form_for([@distributor, @account, @order]) do |f|
  = f.error_notification

  #order_inputs.row
    .four.columns
      .inputs
        = f.association :box, :collection => box_collection(current_distributor, with_price:true)
        = f.input :quantity
        = f.input :frequency, :collection => order_frequencies, :include_blank => false

    .four.columns
      .inputs
        = f.input :likes, :wrapper_html => { :id => 'likes_input' }
        = f.input :dislikes, :wrapper_html => { :id => 'dislikes_input' }

    .four.columns
      %h3= @account.customer.route.name
      .inputs
        = label_tag :start_date, 'Start Date'
        = select_tag :start_date, options_for_select(order_start_dates(@account.customer.route))

        %table#days
          %tr
            %td= check_box_tag 'days[monday]', '1', false, :disabled => !@account.customer.route.monday
            %td= label_tag :days_monday, 'Monday'
          %tr
            %td= check_box_tag 'days[tuesday]', '2', false, :disabled => !@account.customer.route.tuesday
            %td= label_tag :days_tuesday, 'Tuesday'
          %tr
            %td= check_box_tag 'days[wednesday]', '3', false, :disabled => !@account.customer.route.wednesday
            %td= label_tag :days_wednesday, 'Wednesday'
          %tr
            %td= check_box_tag 'days[thursday]', '4', false, :disabled => !@account.customer.route.thursday
            %td= label_tag :days_thursday, 'Thursday'
          %tr
            %td= check_box_tag 'days[friday]', '5', false, :disabled => !@account.customer.route.friday
            %td= label_tag :days_friday, 'Friday'
          %tr
            %td= check_box_tag 'days[saturday]', '6', false, :disabled => !@account.customer.route.saturday
            %td= label_tag :days_saturday, 'Saturday'
          %tr
            %td= check_box_tag 'days[sunday]', '0', false, :disabled => !@account.customer.route.sunday
            %td= label_tag :days_sunday, 'Sunday'

  .row
    .twelve.columns
      .actions
        = f.button :submit
