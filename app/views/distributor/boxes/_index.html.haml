- @boxes.each do |box|
  .box-entry
    .three.columns
      = image_tag(box.box_image.url) if box.box_image?
      .action-bar
        = link_to 'Edit', edit_distributor_box_path(current_distributor.id, box.id)
        |
        = link_to 'Delete', [current_distributor, box], :confirm => 'Are you sure you want to delete this box?', :method => :delete
    .five.columns
      %a{:href => "#{url_for [current_distributor, box] }"}
        %h2= box.name
      %p= box.description
    .four.columns
      %ul.options
        %li Custom boxes
        %li
          %ul
            %li
              = option_status_for box.likes
              Likes
            %li
              = option_status_for box.dislikes
              Dislikes
        %li Delivery options
        %li
          %ul
            %li
              = option_status_for box.available_single
              Once
            %li
              = option_status_for box.available_weekly
              Weekly
            %li
              = option_status_for box.available_fourtnightly
              Fortnightly
      %p.price= box.price.format
    .clear
