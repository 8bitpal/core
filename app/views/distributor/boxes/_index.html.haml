.row-fluid
  .span12
    %table.table.table-bordered.table-striped.no-horizontal-dividers
      %thead
        %tr
          %th Image
          %th Name
          %th Price
          %th Hidden
          %th Exclusions
          %th Substitutions
          %th Extras
          %th Description
          %th Actions

      %tbody
        - @boxes.each do |box|
          %tr
            %td= image_tag(box.box_image.tiny_thumb.url)
            %td= box.name
            %td= box.price.format
            %td= checkmark_boolean(box.hidden)
            - if box.dislikes
              %td= box.substitutions_limit.zero? ? "Unlimited" : "Limited to #{box.substitutions_limit}"
            -else
              %td= checkmark_boolean(box.dislikes)
            - if box.likes
              %td= box.exclusions_limit.zero? ? "Unlimited" : "Limited to #{box.exclusions_limit}"
            - else
              %td= checkmark_boolean(box.likes)
            %td= box.extra_option
            %td= simple_format box.description
            %td= link_to 'Edit', edit_distributor_box_path(box)
