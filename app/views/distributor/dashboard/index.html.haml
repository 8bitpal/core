- title 'Dashboard', false

- if @events.blank? && @accounts.blank?
  .row
    .twelve.columns
      %h2 Welcome!
      %p
        Please, make sure you have updateded all of your
        = link_to 'settings', distributor_settings_routes_path
        and added
        = link_to 'customers.', distributor_customers_path
        Otherwise watch this space for notifications to be added soon.

- unless @events.blank?
  .row#noticeboard
    .twelve.columns
      %h2 Alerts
      - @events.each do |event|
        .row.individual-notice
          .two.columns{class: "notification_tag #{event.event_category}"}= event.event_category
          .two.columns= date_for(event)
          .six.columns= notification_message_for(event)
          .two.columns.text-right
            = link_to '&times;'.html_safe, distributor_dismiss_event_path(event), class: "dismiss small white button radius"

- unless @accounts.blank?
  .row
    .twelve.columns
      %h2 Individual Customer Payments
  .row
    .four.columns
      = render 'distributor/payments/form'
    .eight.columns
      = render 'distributor/payments/index'

