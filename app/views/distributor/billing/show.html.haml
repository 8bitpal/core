.row-fluid
  .span12.text-center
    %h1 Billing

%hr
.row-fluid
  %strong.span2 Current Plan
  .span10
    %strong= pricing.name
    %p= pricing.description

%hr
.row-fluid
  %strong.span2 Billing Date
  .span10
    = pricing.invoicing_day_of_the_month.ordinalize
    of the month

- unless pricing.discount_percentage.zero?
  %hr
  .row-fluid
    %strong.span2 Discount
    .span10= number_to_percentage(pricing.discount_percentage, precision: 0)

%hr
.row-fluid
  %strong.span2 Account Balance
  .span10
    = pricing.account_balance.with_currency(pricing.currency)

%hr
.row-fluid
  %strong.span2 Current Usage
  .span10
    = pricing.current_usage.with_currency(pricing.currency)
    = "(since #{pricing.last_invoiced_date})"

%hr


- if invoices.present?
  .row-fluid{style: "padding-top: 4em"}
    .span12.text-center
      %h4 Recent Invoices

  .row-fluid
    .span12
      %table.table.table-hover
        %thead
          %tr
            %th From
            %th To
            %th Description
            %th Amount
        %tbody
          - invoices.each do |invoice|
            %tr
              %td= invoice.from
              %td= invoice.to
              %td= invoice.description
              %td= invoice.amount.with_currency(invoice.currency)

