- title 'Your Business Information'

= show_settings_sub_nav(:contact_info)

.row
  .four.columns.centered
    = simple_form_for(current_distributor) do |f|
      = f.error_notification

      .inputs
        = f.input :name, label: "Business name"
        = f.input :support_email, label: "Support Email"
        = f.input :url, label: "Website"
        = f.input :company_logo
        = f.input :company_logo_cache, as: :hidden

        .uploaded_image
          - if current_distributor.company_logo?
            = image_tag(current_distributor.company_logo.url)
            = f.input :remove_company_logo, as: :boolean, label: 'Remove image'

        %fieldset.inline-inputs
          %legend Delivery Window
          %p
            Customers must place orders by
            = select_hour @default_delivery_time, ampm: true
            = select_tag 'order_days', options_for_select(days_in_advance, selected: @default_delivery_days)
            before delivery.

        %fieldset.inline-inputs
          %legend Automatic Delivery
          %p
            Automatically assume all deliveries are successfully delivered by
            = select_hour @default_automatic_time, ampm: true
            on the day of delivery.

      .actions
        = f.button :submit, 'Update'

