:javascript
  $(function(){
    // Enable Bootstrap components
    $('[data-toggle="tooltip"]').tooltip();
  });

.row-fluid
  .span12
    %table.table.table-bordered.table-striped.no-horizontal-dividers
      %thead
        %tr
          %th Name
          %th Mon
          %th Tue
          %th Wed
          %th Thu
          %th Fri
          %th Sat
          %th Sun
          %th Fee
          %th Actions

      %tbody
        - @delivery_services.each do |delivery_service|
          %tr
            %td= delivery_service.name
            %td= checkmark_boolean(delivery_service.mon)
            %td= checkmark_boolean(delivery_service.tue)
            %td= checkmark_boolean(delivery_service.wed)
            %td= checkmark_boolean(delivery_service.thu)
            %td= checkmark_boolean(delivery_service.fri)
            %td= checkmark_boolean(delivery_service.sat)
            %td= checkmark_boolean(delivery_service.sun)
            %td= delivery_service.fee
            %td
              = link_to 'Edit', edit_distributor_delivery_service_path(delivery_service)
              |
              - if delivery_service.customers.empty?
                = link_to 'Delete', distributor_delivery_service_path(delivery_service), method: :delete, data: { confirm: "Are you sure? There is no going back." }
              - else
                = link_to 'Delete', 'javascript:void(0)', 'data-toggle' => 'tooltip', 'title' => "You must reassign #{pluralize(delivery_service.customers.count, "customer")} before deleting this delivery service"
