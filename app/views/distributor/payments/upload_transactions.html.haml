- require 'csv'

%h2 Payments

= form_tag commit_upload_distributor_payments_path, :method => :post do
  =# hidden_field_tag(:transaction_import_list_id, @transaction_list.id)
  .row
    %table.twelve.columns
      %thead
        %tr
          %th Date
          %th Description
          %th Amount
          %th Account
          %th Customer
      %tbody
        - @transaction_list.import_transactions.each do |transaction|
          %tr
            %td= transaction.transaction_time.to_s(:transaction)
            %td= transaction.description
            %td= transaction.amount.format
            %td Kiwibank
            %td
              %span{style: "display: inline-block"}= select_tag("import_transaction[#{transaction.id}][]", options_for_select(transaction.possible_customers.collect{|c| [c.badge, c.id] }, transaction.best_match))
              %span= "*" + "*" * (4 * transaction.best_match_confidence)
