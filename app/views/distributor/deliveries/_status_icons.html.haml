.label.state-label{ style: icon_display(status, 'unpacked'), title: 'UNPACKED package' }
  %i.icon-time
.label.state-label{ style: icon_display(status, 'packed'), title: 'Package has been PACKED' }
  %i.icon-ok-sign

.label.state-label{ style: icon_display(status, 'pending'), title: 'PENDING delivery' }
  %i.icon-time
.label.state-label{ style: icon_display(status, 'delivered'), title: 'Delivery has been COMPLETED' }
  %i.icon-ok-sign
.label.state-label{ style: icon_display(status, 'cancelled'), title: 'MISSED DELIVERY, customer has not been charged' }
  %i.icon-remove-sign
.label.state-label{ style: icon_display(status, 'rescheduled'), title: 'Missed delivery, REDELIVERED' }
  %i.icon-remove-sign
.label.state-label{ style: icon_display(status, 'repacked'), title: 'Missed delivery, NEW BOX scheduled' }
  %i.icon-remove-sign
