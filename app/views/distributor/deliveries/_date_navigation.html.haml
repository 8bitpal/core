- unless @date_navigation.empty?
  .row-fluid
    .span12
      #calendar-navigation
        %ul{ style: calendar_nav_length(@date_navigation, @months) }
          - @months.each do |month, dates| #@delivery_lists.group_by{ |date_list| date_list.date.month }.each do |month, date_list_group|
            %li
              .month= Date::ABBR_MONTHNAMES[month]
              .hack-spacer &nbsp;

            - dates.each do |date|
              %li
                = link_to date_distributor_deliveries_path(date) do
                  .date{ class: date_class(date) }= date.strftime("%d %a")
                  .count{ id: count_selected(@date_navigation.first, date, params[:date]), class: count_class(current_distributor, date) }
                    = delivery_quantity(current_distributor, date)
