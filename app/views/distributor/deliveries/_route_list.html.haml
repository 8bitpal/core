.nine.columns
  .row.data-headings
    .seven.columns.delivery_actions
      = check_box_tag 'all'
      = button_tag 'Delivered', class: 'small radius button', id: 'delivered', disabled: @selected_date.future?
      = button_tag '&#9660; More'.html_safe, class: 'small radius button', id: 'more-delivery-options', disabled: @selected_date.future?
      #missed-options.has-flyout
        .flyout
          %ul
            %li= link_to 'Delivery Pending', '#', id: 'pending'
            %li= link_to 'Delivery Cancelled', '#', id: 'cancelled'
          %hr
          %ul
            %li= link_to 'Payment on Delivery', '#', id: 'payment-on-delivery'
            %li= link_to 'Undo Payment', '#', id: 'cancelled'
    .five.columns.export.text-right
      = button_to('Export',
        export_distributor_deliveries_path,
        { id: 'delivery-export', class: 'small radius button', disabled: !@real_list })

  - if @real_list
    %ul#delivery_list.sortable
      - @items.each do |delivery|
        %li.row.data-listings{ id: "delivery_#{delivery.id}", class: delivery.status }
          .two.columns
            = check_box_tag delivery.order_id, '1', false, data: { delivery: delivery.id }
            = render partial: 'status_icons', locals: { status: delivery.status }
            = delivery.delivery_number
          .four.columns= display_address(delivery)
          .three.columns= contents_description(delivery)
          .three.columns= customer_badge(delivery.customer, customer_name: delivery.package.archived_customer_name, short: true)
  - else
    %ul
      - @items.each do |order|
        %li.row.data-listings.pending
          .two.columns
            = check_box_tag order.id, '1', false
            = image_tag 'icon-status-pending.png', title: 'PENDING delivery', class: 'icon-pending'
            N/A
          .four.columns= display_address(order)
          .three.columns= contents_description(order)
          .three.columns= customer_badge(order.customer)
