<% if @address.errors.any? %>
  var el = $('#edit_address_<%= @address.id%>');
  el.html("<%= escape_javascript(render partial: "customer/addresses/form") %>");
<% else %>
  $('#customer-messages').hide();
  $('#customer-messages').html("<%= escape_javascript(render_site_messages(flash)) %>");
  $("#address-modal").modal('hide');
  $('#customer-messages').delay(500).slideDown();
  $('#information').html("<%= escape_javascript(render(partial: 'customer/customers/sidebar', locals: { customer: current_customer })) %>");
<% end %>
