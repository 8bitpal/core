.row-fluid
  .span12
    .customer-information-section
      %p.name= customer.name
      = "#{t('activerecord.attributes.customer.formated_number')}#{t('colon')}#{customer.formated_number}"
      %br
      = customer.email
      %br
      - unless current_customer.address.phones.all.empty?
        = current_customer.address.phones.all.join('<br/>').html_safe
        %br
      %small= link_to t('c.dashboard.change_contact_details'), '#details-modal', data: { toggle: 'modal' }
      %br
      %small= link_to t('c.dashboard.change_password'), '#password-modal', data: { toggle: 'modal' }

    - unless customer.uses_pickup_point?
      .customer-information-section.spacer
        = current_customer.address.join('<br/>')
        %br
        %small= link_to t('c.dashboard.change_delivery_address'), '#address-modal', data: { toggle: 'modal' }
