= simple_form_for(order, url: customer_order_path(order), html: { method: :put }) do |f|
  = f.error_notification

  .customer_order
    = hidden_field_tag 'order_id', order.id

    .inputs
      = f.association :box, collection: box_collection(current_customer, with_price: true), include_blank: false
      = f.input :quantity
      = f.input :likes, wrapper_html: { id: 'likes_input' }
      = f.input :dislikes, wrapper_html: { id: 'dislikes_input' }

      - unless @order.persisted?
        %h3= @customer.route.name
        .inputs
          = label_tag :start_date, 'Start Date'
          = select_tag :start_date, options_for_select(order_start_dates(@customer.route))

          %table#days
            %tr
              %td= check_box_tag 'days[monday]', '1', false, :disabled => !@customer.route.monday
              %td= label_tag :days_monday, 'Monday'
            %tr
              %td= check_box_tag 'days[tuesday]', '2', false, :disabled => !@customer.route.tuesday
              %td= label_tag :days_tuesday, 'Tuesday'
            %tr
              %td= check_box_tag 'days[wednesday]', '3', false, :disabled => !@customer.route.wednesday
              %td= label_tag :days_wednesday, 'Wednesday'
            %tr
              %td= check_box_tag 'days[thursday]', '4', false, :disabled => !@customer.route.thursday
              %td= label_tag :days_thursday, 'Thursday'
            %tr
              %td= check_box_tag 'days[friday]', '5', false, :disabled => !@customer.route.friday
              %td= label_tag :days_friday, 'Friday'
            %tr
              %td= check_box_tag 'days[saturday]', '6', false, :disabled => !@customer.route.saturday
              %td= label_tag :days_saturday, 'Saturday'
            %tr
              %td= check_box_tag 'days[sunday]', '0', false, :disabled => !@customer.route.sunday
              %td= label_tag :days_sunday, 'Sunday'

    .actions
      = f.button :submit

