- stylesheet 'customer'
- javascript 'customer'

- content_for :body do
  .container
    = render_site_messages(flash)

    .row
      #devise-frame.span6.offset3
        - if @distributor
          .row
            #distributor-logo.span6
              = link_to webstore_store_path(@distributor.parameter_name) do
                - if @distributor.company_logo?
                  = image_tag @distributor.company_logo.frame_banner.url
                - else
                  %h1= @distributor.name
        .row
          .span6
            .row-fluid
              #devise-form.span12= yield

    .row
      #bucky-watermark.span6.offset3
        = link_to image_tag('bucky-box-watermark.png', title: 'Bucky Box | The Mission'), 'http://www.buckybox.org/'

= render 'layouts/base'

