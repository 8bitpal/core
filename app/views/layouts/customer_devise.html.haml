- stylesheet 'customer'
- javascript 'customer'

- content_for :body do
  .container
    = render_site_messages(flash)

    .row
      #devise-frame.span6.offset3
        - if @distributor
          .row
            #distributor-logo.span6
              = image_tag @distributor.company_logo.banner.url
        .row
          .span6
            .row-fluid
              #devise-form.span12= yield

    .row
      #bucky-watermark.span6.offset3
        = link_to image_tag('bucky-box-watermark.png', title: 'Bucky Box | The Mission'), 'http://www.buckybox.org/'

= render 'layouts/base'

