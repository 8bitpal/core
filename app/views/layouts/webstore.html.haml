- content_for :body do
  %body
    .container
      .row
        .twelve.columns
          - flash.each do |kind, message|
            = flash_bar(kind, message)

      .row
        .three.columns
          = image_tag(@distributor.company_logo.url)

        .nine.columns
          %strong= @distributor.name
          %p= @distributor.invoice_information.join

      .row
        .twelve.columns
          - if @hide_sidebars
            #content
              = yield
          - else
            #content.row
              #details.four.columns= render partial: 'webstore/order_details', object: { box: @box }

              .eight.columns
                - if show_title?
                  %h1= yield(:title)

                = yield

= render 'layouts/base'

