- content_for :body do
  %body
    .container
      .row
        .twelve.columns
          - flash.each do |kind, message|
            = flash_bar(kind, message)

      .row
        .three.columns
          = image_tag(@distributor.company_logo.url)
        .nine.columns
          %strong= @distributor.name
          - if @distributor.invoice_information
            %p= @distributor.invoice_information.join

      - if @webstore_order
        = render partial: 'webstore/webstore_order', object: @webstore_order

      #content.row
        .twelve.columns
          - if show_title?
            %h1.text-center= yield(:title)

          = yield

= render 'layouts/base'

