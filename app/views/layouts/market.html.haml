= render 'layouts/head'

%body
  .container
    .row
      .twelve.columns
        - flash.each do |kind, message|
          = flash_bar(kind, message)

    .row
      .three.columns
        = image_tag(@distributor.company_logo.url) if @distributor.company_logo?
        
      .nine.columns
        %strong= @distributor.name
        %p 
          = distributor_address(@distributor, :single_line => true)
          %br
          = @distributor.invoice_information.phone

    .row
      .twelve.columns
        - if @hide_sidebars
          #content
            = yield
        - else
          #content.row
            #details.four.columns
              = render :partial => 'market/order_details'

            .eight.columns
              - if show_title?
                %h1= yield(:title)

              = yield

