#user-nav.tabbable.tabs-below
  %ul.nav.nav-pills.pull-right
    %li.dropdown.pull-right
      = link_to '#', class: 'dropdown-toggle distributor-name', data: { toggle: 'dropdown' } do
        = current_distributor.name
        %b.caret
      %ul.dropdown-menu
        %li= link_to 'settings', distributor_settings_business_information_path
        - if current_distributor.active_webstore?
          %li= link_to 'view webstore', webstore_store_path(current_distributor.parameter_name), target: '_blank'
        %li= link_to 'reporting', distributor_reports_path
        %li.divider
        %li
          - if admin_signed_in?
            = link_to 'logout', unimpersonate_admin_distributors_path
          - else
            = link_to 'logout', destroy_distributor_session_path, method: :delete
    %li.dropdown.pull-right
      = render partial: 'distributor/notifications/index'
