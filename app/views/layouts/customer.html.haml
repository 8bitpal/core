- content_for :body do
  %body
    .container
      .row
        .twelve.columns
          - flash.each do |kind, message|
            = flash_bar(kind, message)

      .row
        .six.columns
          .float-left== #{current_customer.distributor.name}: My Account
        .six.columns
          .float-right
            - if customer_signed_in?
              Signed in as
              %strong=  current_customer.name 
              \|
              = link_to 'logout', destroy_customer_session_path, :method => :delete
            - else
              = link_to 'login', new_customer_session_path

      #dashboard-content.row
        .twelve.columns

          - if show_title?
            %h1.text-center= yield(:title)

          = yield

= render 'layouts/base'

