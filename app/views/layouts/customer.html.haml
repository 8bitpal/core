- stylesheet 'customer'
- javascript 'customer'

- content_for :body do
  .row
    .span12= render partial: 'layouts/customer/banner', locals: { distributor: @distributor }

  = render_site_messages(flash)

  .row
    .span3= yield(:sidebar)
    .span9
      #content
        - if show_title?
          .row-fluid
            .span12.text-center
              %h2= yield(:title)

        .row-fluid
          .span12= yield

= render 'layouts/base'

