- content_for :body do
  %body
    .container
      .row
        .twelve.columns
          - flash.each do |kind, message|
            = flash_bar(kind, message)

      .row
        .twelve.columns
          #session-links
            - if distributor_signed_in?
              Signed in as 
              %strong=  link_to current_distributor.name, distributor_settings_path(current_distributor)
              = link_to 'Logout', destroy_distributor_session_path, :method => :delete
            - else   
              = link_to 'Sign up', new_distributor_registration_path
              or  
              = link_to 'Login', new_distributor_session_path

      #dashboard-content.row
        .twelve.columns
          = render :partial => 'distributor/shared/topic_tabs'
        .sub-nav-bar
          = yield(:sub_nav)

          - if show_title?
            %h1.text-center= yield(:title)

          = yield

= render 'layouts/base'

