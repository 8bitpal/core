- stylesheet 'distributor'
- javascript 'distributor'

- content_for :thrid_party_code do
  = render 'layouts/distributor/third_party_code'

- content_for :body do
  .container
    #user-information.row
      #flash-messages.span8.offset1= render_site_messages(flash)
      .span3= render 'layouts/distributor/user_nav'


    .row
      .span1= render 'layouts/distributor/topic_tabs'
      .span11
        #content
          - unless yield(:sub_nav).blank?
            .row-fluid
              #sub-nav.span12= yield(:sub_nav)

          - if show_title?
            .row-fluid
              .span12.text-center
                %h1= yield(:title)

          .row-fluid
            .span12= yield

= render 'layouts/base'
