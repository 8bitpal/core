= simple_form_for(@customer) do |f|
  = f.error_notification

  .row
    .six.columns
      .inputs
        = f.input :email
        = f.input :first_name
        = f.input :last_name
        = f.input :phone
        = f.association :route, :collection => current_distributor.routes, :include_blank => false

    .six.columns
      = f.simple_fields_for :address do |g|
        .inputs
          = g.input :address_1
          = g.input :address_2
          = g.input :suburb
          = g.input :city
          = g.input :postcode
          = g.input :delivery_note

      .actions
        = f.button :submit
        = link_to 'Cancel', :back, :class => 'blue radius button'
