- title('Webstore - Placed', false)
= render 'webstore_sidebar'

.row-fluid.span12
  .important Payment instructions
  = render 'payment_instructions'

= simple_form_for(WebstorePayment.new(@webstore_order), url: webstore_process_step_path, html: {class: 'payments'}) do |f|
  .row-fluid
    #webstore-payment.span12
      .row-fluid
        #payment.span12
          .row-fluid
            .span12.text-center.payment-title
              Pay by
              = @webstore_order.payment_method_string
          .row-fluid
            .span9.center-row
              = f.input :payment_method, as: :hidden
              - if @webstore_order.payment_method? :credit_card
                = render partial: 'webstore/payment_credit_card', locals: {form: f}
              - elsif @webstore_order.payment_method? :cash_on_delivery
                = render partial: 'webstore/payment_cash_on_delivery'
              - elsif @webstore_order.payment_method? :bank_deposit
                = render partial: 'webstore/payment_bank_deposit'

.row-fluid
  .important Order summary
  = render partial: 'webstore_order', object: @webstore_order

.row-fluid
  #webstore-placed.span12
    .row-fluid
      .span6
        .important Deliver to
        = @customer.name
        %br
        = @address.join('<br>')
      .span6
        .important Delivery date
        = @schedule_rule.next_occurrence.to_s(:day_month_date_year)
        %br
        = @schedule_rule

.row-fluid
  .span12.text-center
    = link_to 'Back to webstore', webstore_store_path(@distributor.parameter_name), class: 'btn btn-process', id: 'webstore'
    = link_to 'My account', customer_root_path, class: 'btn btn-process', id: 'webstore-my-account'
