- title('Admin - Dashboard')

.row-fluid
  .span12
    .text-center.muted
      Latest deployment:
      - commit = Rails.application.config.version.split.first
      - link = "https://github.com/enspiral/bucky_box/commit/#{commit}"
      = link_to Rails.application.config.version, link, target: "_blank"
      running Ruby #{RUBY_VERSION}

.row-fluid
  .span6
    = render partial: 'admin/dashboard/nav'
  .span6.text-right
    = link_to "https://app.intercom.io/a/apps/b3e72f90ddcc230dea36a8e35ec7e4dd65860b61/users/segments/active", target: "_blank" do
      = @distributors.count - 1 # minus 1 for demo@buckybox.com
      active distributors

- unless @distributors.empty?
  = render 'admin/dashboard/index'

- unless @cron_logs.empty?
  .row-fluid
    .span12
      = link_to 'Longer Log', admin_cron_logs_path

  .row-fluid
    .span12
      = render 'admin/cron_logs/index'
